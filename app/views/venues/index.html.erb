<div class="venues">
  <div class="search my-5 container col-4">
    <%= form_with url: venues_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="cards">
    <% @venues.each do |venue| %>
    <div class="">
      <div class="card">
        <% if venue.photos.attached? %>
          <%= link_to cl_image_tag(venue.photos.first.key, class: "card-img-top", height: 250, crop: :fill), venue_path(venue) %>
        <% else %>
          <%= link_to cl_image_tag("https://res.cloudinary.com/dtke2msby/image/upload/v1677529280/development/venue_img_placeholder_mtmrus.jpg", class: "card-img-top", height: 250, crop: :fill), venue_path(venue)%>
        <% end %>
        <div class="card-title">
          <h2>
            <%= venue.name %>
          </h2>
        </div>
        <div class="d-flex bottom-left">
          <i class="fa-solid fa-people-group me-2 align-self-center"></i>
          <p class="my-auto"> <%=venue.capacity %> </p>
        </div>
      </div>

      <div class="card-body px-0 mt-2">
        <h6><%= venue.city %>, <%= venue.country %> </h6>
        <div class="d-flex fw-semibold justify-content-between">
          <div class="d-flex">
            <p>â‚¬<%= venue.price %> </p>
            <p class="fw-light text-muted ms-2">/ day</p>
          </div>
          <div>
            <p class="fw-lighter">
              <%= venue.available_start_date.strftime("%d %b") %> - <%= venue.available_end_date.strftime("%d %b") %>
            </p>
          </div>
        </div>

      </div>
    </div>
    <% end %>
  </div>
</div>
