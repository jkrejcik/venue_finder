<div class="container col-8">
  <div class="d-flex align-items-center justify-content-between">
    <h1>Welcome to Find Venue</h1>
  </div>


  <div class="container">
    <p>Website created by Ronan, Jan and Jaro that will allow you to rent a venue.</p>
      <% @venues.last(6).each do |venue| %>
      <div>
        <%= venue.name %>
      </div>
      <div>
        <%= link_to "Find out more...", venue_path(venue), class: "btn btn-secondary"%>
      </div>
      <br>
      <% end %>
    <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>

  </div>
</div>

