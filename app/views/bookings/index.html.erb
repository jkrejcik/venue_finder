<div class="container">
  <h1 class="mb-3"><%= current_user.first_name %>'s Bookings</h1>
      <% if @bookings.empty? %>
      <ol>
      <p>You have no bookings ðŸ˜¢ </p>
      <% else %>
      <% @bookings.each do |booking| %>
      <li class="card p-3 mb-2">
        <h4 class="mb-3"><%= link_to booking.venue.name, venue_path(booking.venue), class: "text-decoration-none" %></h4>
        <div class="d-flex justify-content-between">
          <p>Start date: <em><%= booking.booking_start_date.strftime("%d %b, %Y") %></em></p>
          <p>End date: <em><%= booking.booking_end_date.strftime("%d %b, %Y") %></em></p>
        </div>
        <div>
        
          <%= link_to "Cancel Booking", venue_path(booking.venue), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning" %>
        </div>
      </li>
    <% end %>
    </ol>
    <% end %>
</div>
